<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.DompetQ" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorSecondaryVariant">@color/primary_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_blue</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background_white</item>

        <!-- Text appearance -->
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- Custom text style -->
    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Custom button style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>